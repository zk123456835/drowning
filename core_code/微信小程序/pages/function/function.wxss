.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  background: linear-gradient(to right, #1E90FF, #00BFFF);
  padding: 30rpx;
  color: white;
  text-align: center;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.placeholder {
  width: 300rpx;
  height: 300rpx;
  opacity: 0.6;
  margin-bottom: 40rpx;
}

.tip {
  font-size: 32rpx;
  color: #888;
}

.back-btn {
  width: 70%;
  margin: 60rpx auto;
  background-color: #1E90FF;
  color: white;
  border-radius: 50rpx;
}