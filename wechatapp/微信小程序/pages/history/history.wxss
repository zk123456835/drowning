/* pages/history/history.wxss */
.container {
  padding: 20rpx;
}

.header {
  background: linear-gradient(to right, #1E90FF, #00BFFF);
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
  color: white;
  text-align: center;
}

.stats {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
}

.stat-card {
  background-color: white;
  border-radius: 15rpx;
  padding: 20rpx;
  width: 30%;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #1E90FF;
  display: block;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.list {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.list-header {
  display: flex;
  background-color: #1E90FF;
  color: white;
  padding: 20rpx 0;
}

.header-item {
  flex: 1;
  text-align: center;
  font-weight: bold;
}

.list-item {
  display: flex;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #eee;
}

.list-item:last-child {
  border-bottom: none;
}

.item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
}

.success .item {
  color: #4CAF50;
}

.fail .item {
  color: #FF5722;
}

.back-btn {
  background-color: #f5f5f5;
  color: #666;
  margin: 40rpx auto;
  width: 80%;
  border-radius: 50rpx;
}