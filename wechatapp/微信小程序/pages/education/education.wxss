/* pages/education/education.wxss */
.container {
  padding: 20rpx;
}

.header {
  background: linear-gradient(to right, #1E90FF, #00BFFF);
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
  color: white;
  text-align: center;
}

.card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.section:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.section-content {
  font-size: 30rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-line;
}

.video-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.video-desc {
  display: block;
  text-align: center;
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.back-btn {
  background-color: #f5f5f5;
  color: #666;
  margin: 40rpx auto;
  width: 80%;
  border-radius: 50rpx;
}

.video-container {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.video-loading {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  z-index: 10;
}