<!--index.wxml-->
<view class="container">
  <!-- 标题 -->
  <view class="title">智能水上救生系统</view>
  
  <!-- 救援次数 -->
  <view class="rescue-count">救援次数：23</view>
  
  <!-- 功能入口，使用grid布局 -->
  <view class="grid">
    <!-- 第一个功能：巡查地点 -->
    <view class="grid-item" bindtap="navigateToFunction" data-type="patrol">
      <image src="/images/patrol.png" style="width: 80rpx; height: 80rpx;"> </image>
      <text>巡查地点</text>
    </view>
    
    <!-- 第二个功能：教育培训 -->
    <view class="grid-item" bindtap="navigateToFunction" data-type="education">
      <image src="/images/education.png" style="width: 80rpx; height: 80rpx;"> </image>
      <text>教育培训</text>
    </view>
    
    <!-- 第三个功能：历史数据 -->
    <view class="grid-item" bindtap="navigateToFunction" data-type="history">
      <image src="/images/history.png" style="width: 80rpx; height: 80rpx;"> </image>
      <text>历史数据</text>
    </view>
  </view>
</view>