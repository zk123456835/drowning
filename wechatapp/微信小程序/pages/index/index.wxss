/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  margin: 40rpx 0;
}
.rescue-count {
  font-size: 36rpx;
  margin-bottom: 60rpx;
}
.grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 40rpx;
  width: 100%;
  padding: 0 40rpx;
}
.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding: 30rpx 0;
}
.grid-item text {
  margin-top: 20rpx;
  font-size: 28rpx;
}